extend layout.pug
block content
  div(class="container")
    div(class="chat" style="margin-left:100px")
        h1 New Message
        form(class="form-horizontal" style="margin-left:70px" action="" method="POST" enctype="application/x-www-form-urlencoded")
            label(class="control-label" for="email") Email Receider
            input(type="email" class="form-control" name="email" placeholder="Enter email")
            label(class="control-label" for="cont") Contents
            textarea(class="form-control" name="cont" placeholder="Press contents...")
            div(class="col-sm-offset-2 col-sm-10")
                button(type="submit" class="btn btn-default") Sent..

